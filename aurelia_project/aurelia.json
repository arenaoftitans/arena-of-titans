{
    "name": "test-cli",
    "type": "project:application",
    "platform": {
        "id": "web",
        "displayName": "Web",
        "output": "scripts",
        "index": "index.html"
    },
    "transpiler": {
        "id": "babel",
        "displayName": "Babel",
        "fileExtension": ".js",
        "options": {
            "presets": [
                "es2015",
                "stage-1"
            ],
            "plugins": [
                "transform-es2015-modules-amd",
                "syntax-flow",
                "transform-decorators-legacy",
                "transform-flow-strip-types"
            ]
        },
        "source": ["app/**/*.js", "locale/**/*.js"]
    },
    "markupProcessor": {
        "id": "none",
        "displayName": "None",
        "fileExtension": ".html",
        "source": "app/**/*.html"
    },
    "cssProcessor": {
        "id": "sass",
        "displayName": "Sass",
        "fileExtension": ".scss",
        "source": "app/**/*.scss"
    },
    "editor": {
        "id": "vscode",
        "displayName": "Visual Studio Code"
    },
    "unitTestRunner": {
        "id": "karma",
        "displayName": "Karma",
        "source": "test/unit/**/*.js"
    },
    "paths": {
        "root": "app"
    },
    "testFramework": {
        "id": "jasmine",
        "displayName": "Jasmine"
    },
    "build": {
        "targets": [
            {
                "id": "web",
                "displayName": "Web",
                "output": "dist",
                "useAbsolutePath": true
            }
        ],
        "loader": {
            "type": "require",
            "configTarget": "vendor-bundle.js",
            "includeBundleMetadataInConfig": "auto",
            "config": {
                "waitSeconds": 60
            },
            "plugins": [
                {
                    "name": "text",
                    "extensions": [
                        ".html",
                        ".css"
                    ],
                    "stub": true
                }
            ]
        },
        "options": {
            "minify": "stage & prod",
            "sourcemaps": "dev & stage"
        },
        "bundles": [
            {
                "name": "common-bundle.js",
                "source": [
                    "[**/locale/**/*.js]",
                    "[**/app.js]",
                    "[**/environment.js]",
                    "[**/main.js]",
                    "[**/services/*.js]",
                    "[**/widgets/aot-options/*.js]",
                    "**/app.html",
                    "**/widgets/aot-options/*.html",
                    "**/widgets/aot-options/*.css",
                    "**/style/*.css"
                ]
            },
            {
                "name": "site-bundle.js",
                "source": [
                    "[**/site/**/*.js]",
                    "**/site/**/*.{css,html}"
                ]
            },
            {
                "name": "game-common-bundle.js",
                "dependencies": [
                    {
                        "name": "reconnectingwebsocket",
                        "path": "../node_modules/reconnectingwebsocket",
                        "main": "reconnecting-websocket"
                    }
                ],
                "source": [
                    "[**/game/game.js]",
                    "[**/game/services/*.js]",
                    "[**/game/widgets/**/*.js]",
                    "**/game/**/*.{css,html}",
                    "**/game/game.{css,html}",
                    "**/game/widgets/**/*.{css,html}"
                ]
            },
            {
                "name": "game-create-bundle.js",
                "dependencies": [
                    {
                        "name": "clipboard",
                        "path": "../node_modules/clipboard/dist",
                        "main": "clipboard"
                    }
                ],
                "source": [
                    "[**/game/create/**/*.js]",
                    "**/game/create/**/*.{css,html}"
                ]
            },
            {
                "name": "game-play-bundle.js",
                "source": [
                    "[**/game/play/**/*.js]",
                    "**/game/play/**/*.{css,html}"
                ]
            },
            {
                "name": "vendor-bundle.js",
                "prepend": [
                    "node_modules/bluebird/js/browser/bluebird.js",
                    "scripts/polyfills.js",
                    "scripts/rollbar.js",
                    "node_modules/requirejs/require.js"
                ],
                "dependencies": [
                    "aurelia-animator-css",
                    "aurelia-binding",
                    "aurelia-bootstrapper",
                    "aurelia-dependency-injection",
                    "aurelia-event-aggregator",
                    "aurelia-framework",
                    "aurelia-history",
                    "aurelia-history-browser",
                    {
                        "name": "aurelia-i18n",
                        "path": "../node_modules/aurelia-i18n/dist/amd",
                        "main": "aurelia-i18n"
                    },
                    "aurelia-loader",
                    "aurelia-loader-default",
                    "aurelia-logging",
                    "aurelia-logging-console",
                    "aurelia-metadata",
                    "aurelia-pal",
                    "aurelia-pal-browser",
                    "aurelia-path",
                    {
                        "name": "aurelia-piwik",
                        "path": "../node_modules/aurelia-piwik/dist/amd",
                        "main": "index"
                    },
                    "aurelia-polyfills",
                    "aurelia-route-recognizer",
                    "aurelia-router",
                    "aurelia-task-queue",
                    "aurelia-templating",
                    "aurelia-templating-binding",
                    "text",
                    {
                        "name": "aurelia-templating-resources",
                        "path": "../node_modules/aurelia-templating-resources/dist/amd",
                        "main": "aurelia-templating-resources"
                    },
                    {
                        "name": "aurelia-templating-router",
                        "path": "../node_modules/aurelia-templating-router/dist/amd",
                        "main": "aurelia-templating-router"
                    },
                    {
                        "name": "aurelia-testing",
                        "path": "../node_modules/aurelia-testing/dist/amd",
                        "main": "aurelia-testing",
                        "env": "dev"
                    },
                    {
                        "name": "i18next",
                        "path": "../node_modules/i18next/dist/commonjs",
                        "main": "index"
                    },
                    {
                        "name": "i18next-xhr-backend",
                        "path": "../node_modules/i18next-xhr-backend/dist/commonjs",
                        "main": "index"
                    }
                ]
            },
            {
                "name": "test-utils-bundle.js",
                "source": [
                    "[**/test-utils.js]"
                ]
            }
        ]
    }
}