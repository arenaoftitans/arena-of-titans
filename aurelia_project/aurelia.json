{
    "name": "arena-of-titans",
    "type": "project:application",
    "platform": {
        "id": "web",
        "displayName": "Web",
        "baseDir": ".",
        "output": "scripts",
        "index": "index.html"
    },
    "transpiler": {
        "id": "babel",
        "displayName": "Babel",
        "fileExtension": ".js",
        "options": {
            "presets": [
                "es2015",
                "stage-1"
            ],
            "plugins": [
                "transform-es2015-modules-amd",
                "syntax-flow",
                "transform-decorators-legacy",
                "transform-flow-strip-types"
            ]
        },
        "source": "app/**/*.js"
    },
    "coverageTranspiler": {
        "id": "babel",
        "displayName": "Babel with coverage",
        "fileExtension": ".js",
        "options": {
            "presets": [
                "es2015",
                "stage-1"
            ],
            "plugins": [
                "transform-es2015-modules-amd",
                "syntax-flow",
                "transform-decorators-legacy",
                "transform-flow-strip-types",
                "istanbul"
            ]
        },
        "source": "app/**/*.js"
    },
    "markupProcessor": {
        "id": "maximum",
        "displayName": "Maximun minification",
        "fileExtension": ".html",
        "source": "app/**/*.html"
    },
    "cssProcessor": {
        "id": "sass",
        "displayName": "Sass",
        "fileExtension": ".scss",
        "source": "app/**/*.scss"
    },
    "templates": {
        "id": "templates",
        "displayName": "Templates",
        "source": "templates/**/*"
    },
    "editor": {
        "id": "vscode",
        "displayName": "Visual Studio Code"
    },
    "unitTestRunner": {
        "id": "karma",
        "displayName": "Karma",
        "source": "test/unit/**/*.js"
    },
    "paths": {
        "reports": "reports",
        "root": "app"
    },
    "testFramework": {
        "id": "jasmine",
        "displayName": "Jasmine"
    },
    "assets": {
        "manifest": {
            "name": "assets-list.js",
            "output": "app"
        },
        "output": "dist/assets",
        "source": "assets/**/*"
    },
    "externalResources": {
        "defaultNames": {
            "source": "https://docs.google.com/spreadsheets/d/1Ees-A_yNQTfba7wH-flbrJunLMiTcTOUsbHqUTyOKm8/export?format=csv",
            "dest": "app/game/create/default-names.js"
        },
        "translations": {
            "source": [
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=985921915",
                    "tab": "actions"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=2131671933",
                    "tab": "cards"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=807068577",
                    "tab": "errors"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=1241014372",
                    "tab": "game"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=158417819",
                    "tab": "game.create"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=1072267331",
                    "tab": "game.play"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=1365540142",
                    "tab": "game.visit"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=575822508",
                    "tab": "global"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=1362194548",
                    "tab": "heroes"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=724206052",
                    "tab": "powers"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=0",
                    "tab": "site"
                },
                {
                    "url": "https://docs.google.com/spreadsheets/d/1YWBqm7OUVshYZhVrKiCnbuYBUcPlLtB0dR7rqpWbevU/export?format=csv&gid=195514419",
                    "tab": "trumps"
                }
            ],
            "dest": {
                "fr": "app/locale/fr/translations.js",
                "en": "app/locale/en/translations.js"
            }
        }
    },
    "build": {
        "targets": [
            {
                "id": "web",
                "displayName": "Web",
                "output": "dist",
                "useAbsolutePath": true,
                "index": "index.html"
            }
        ],
        "loader": {
            "type": "require",
            "configTarget": "bootstrap-bundle.js",
            "includeBundleMetadataInConfig": "auto",
            "config": {
                "waitSeconds": 60
            },
            "plugins": [
                {
                    "name": "text",
                    "extensions": [
                        ".html",
                        ".css"
                    ],
                    "stub": true
                }
            ]
        },
        "options": {
            "minify": "testing & staging & prod",
            "sourcemaps": "dev & testing & staging & prod",
            "rev": "testing & staging & prod"
        },
        "bundles": [
            {
                "name": "common-bundle.js",
                "source": [
                    "[**/locale/**/*.js]",
                    "[**/routes.js]",
                    "[**/app.js]",
                    "[**/environment.js]",
                    "[**/app/assets-list.js]",
                    "[**/main.js]",
                    "[**/services/*.js]",
                    "[**/app/widgets/**/*.js]",
                    "**/app.html",
                    "**/app/widgets/**/*.{html,css}",
                    "**/style/*.css"
                ]
            },
            {
                "name": "site-bundle.js",
                "source": [
                    "[**/site/**/*.js]",
                    "**/site/**/*.{css,html}"
                ]
            },
            {
                "name": "game-common-bundle.js",
                "dependencies": [
                    {
                        "name": "reconnectingwebsocket",
                        "path": "../node_modules/reconnectingwebsocket",
                        "main": "reconnecting-websocket"
                    }
                ],
                "source": [
                    "[**/game/game.js]",
                    "[**/game/routes.js]",
                    "[**/game/services/*.js]",
                    "[**/game/widgets/**/*.js]",
                    "**/game/**/*.{css,html}",
                    "**/game/game.{css,html}",
                    "**/game/widgets/**/*.{css,html}"
                ]
            },
            {
                "name": "game-create-bundle.js",
                "dependencies": [
                    {
                        "name": "clipboard",
                        "path": "../node_modules/clipboard/dist",
                        "main": "clipboard"
                    }
                ],
                "source": [
                    "[**/game/create/**/*.js]",
                    "**/game/create/**/*.{css,html}"
                ]
            },
            {
                "name": "game-play-bundle.js",
                "source": [
                    "[**/game/play/**/*.js]",
                    "**/game/play/**/*.{css,html}"
                ]
            },
            {
                "name": "vendor-bundle.js",
                "prepend": [],
                "dependencies": [
                    "aurelia-animator-css",
                    "aurelia-binding",
                    "aurelia-bootstrapper",
                    "aurelia-dependency-injection",
                    "aurelia-event-aggregator",
                    "aurelia-framework",
                    "aurelia-history",
                    "aurelia-history-browser",
                    {
                        "name": "aurelia-i18n",
                        "path": "../node_modules/aurelia-i18n/dist/amd",
                        "main": "aurelia-i18n"
                    },
                    "aurelia-loader",
                    "aurelia-loader-default",
                    "aurelia-logging",
                    "aurelia-logging-console",
                    "aurelia-metadata",
                    "aurelia-pal",
                    "aurelia-pal-browser",
                    "aurelia-path",
                    {
                        "name": "aurelia-piwik",
                        "path": "../node_modules/aurelia-piwik/dist/amd",
                        "main": "index"
                    },
                    "aurelia-polyfills",
                    "aurelia-route-recognizer",
                    "aurelia-router",
                    "aurelia-task-queue",
                    "aurelia-templating",
                    "aurelia-templating-binding",
                    "au-rollbar",
                    "text",
                    {
                        "name": "aurelia-templating-resources",
                        "path": "../node_modules/aurelia-templating-resources/dist/amd",
                        "main": "aurelia-templating-resources"
                    },
                    {
                        "name": "aurelia-templating-router",
                        "path": "../node_modules/aurelia-templating-router/dist/amd",
                        "main": "aurelia-templating-router"
                    },
                    {
                        "name": "aurelia-testing",
                        "path": "../node_modules/aurelia-testing/dist/amd",
                        "main": "aurelia-testing",
                        "env": "dev"
                    },
                    {
                        "name": "i18next",
                        "path": "../node_modules/i18next/dist/commonjs",
                        "main": "index"
                    },
                    {
                        "name": "i18next-xhr-backend",
                        "path": "../node_modules/i18next-xhr-backend/dist/commonjs",
                        "main": "index"
                    }
                ]
            },
            {
                "name": "bootstrap-bundle.js",
                "prepend": [
                    "node_modules/bluebird/js/browser/bluebird.js",
                    "scripts/polyfills.js",
                    {
                        "name": "rollbar",
                        "path": "./scripts/rollbar.js",
                        "main": "rollbar",
                        "env": "staging & prod"
                    },
                    "scripts/browser.js",
                    "node_modules/requirejs/require.js"
                ],
                "dependencies": []
            },
            {
                "name": "test-utils-bundle.js",
                "source": [
                    "[**/test-utils.js]"
                ]
            }
        ]
    }
}
