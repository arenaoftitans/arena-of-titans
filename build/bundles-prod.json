{
  "force": true,
  "bundles": {
    "dist/site-build": {
      "includes": [
        "[*.js]",
        "*.html!text",
        "[widgets/*.js]",
        "widgets/*.html!text",
        "[rules/*.js]",
        "rules/*.html!text",
        "[synopsis/*.js]",
        "synopsis/*.html!text"
      ],
      "options": {
        "inject": true,
        "minify": true,
        "depCache": true
      }
    },
    "dist/game-build": {
      "includes": [
        "[game/**/*.js]",
        "game/**/*.html!text",
        "config/application.json!json"
      ],
      "options": {
        "inject": true,
        "minify": true,
        "depCache": true
      }
    },
    "dist/aurelia": {
      "includes": [
        "aurelia-framework",
        "aurelia-bootstrapper",
        "aurelia-history-browser",
        "aurelia-i18n",
        "aurelia-loader-default",
        "aurelia-logging-console",
        "aurelia-polyfills",
        "aurelia-router",
        "aurelia-templating-binding",
        "aurelia-templating-resources",
        "aurelia-templating-router",
        "systemjs-plugin-json",
        "json",
        "text",
        "img"
      ],
      "options": {
        "inject": true,
        "minify": true
      }
    }
  }
}
