{
  "name": "ArenaOfTitans",
  "version": "0.5.0",
  "description": "Fight to death in the arena",
  "scripts": {
    "dev": "node scripts/build-config.py --type dev && au run --watch",
    "build": "au build --env prod",
    "devbuild": "au build",
    "prod": "npm run clean && python3 scripts/build-config.py --type prod && au build --env prod",
    "staging": "npm run clean && python3 scripts/build-config.py --type staging && au build --env prod",
    "testing": "npm run clean && python3 scripts/build-config.py --type testing && au build --env prod",
    "clean": "rm -rf dist/*",
    "test": "au test --watch",
    "lint": "npm run jslint && npm run stylelint",
    "jslint": "eslint app",
    "stylelint": "stylelint --syntax scss app/**/*.scss",
    "deploy": "npm run prod && rsync -a --delete -P --exclude=\"*.map\" \"index.html\" \"assets\" \"dist\" \"aot:app/\"",
    "devdeploy": "npm run mock && rsync -a --delete -P --exclude=\"*.map\" \"index.html\" \"assets\" \"dist\" \"aot:devapp/\"",
    "translate": "python3 scripts/translate.py",
    "sprites": "glue -s assets/game/cards/movement -o style/sprites --img assets/sprites"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/arenaoftitans/arena-of-titans"
  },
  "main": "gulpfile.js",
  "dependencies": {
    "aurelia-binding": "^1.0.2",
    "aurelia-bootstrapper": "^1.0.0",
    "aurelia-dependency-injection": "^1.0.0",
    "aurelia-event-aggregator": "^1.0.0",
    "aurelia-framework": "^1.0.2",
    "aurelia-history-browser": "^1.0.0",
    "aurelia-i18n": "^1.1.1",
    "aurelia-logging-console": "^1.0.0",
    "aurelia-pal-browser": "^1.0.0",
    "aurelia-piwik": "^0.1.3",
    "aurelia-polyfills": "^1.0.0",
    "aurelia-router": "^1.0.2",
    "aurelia-templating": "^1.0.1",
    "aurelia-templating-binding": "^1.0.0",
    "aurelia-templating-resources": "^1.0.0",
    "aurelia-templating-router": "^1.0.0",
    "bluebird": "^3.4.3",
    "clipboard": "^1.5.12",
    "i18next": "3.4.1",
    "i18next-xhr-backend": "^1.1.0",
    "reconnectingwebsocket": "^1.0.0"
  },
  "devDependencies": {
    "aurelia-cli": "git+https://github.com/Jenselme/cli.git#ce9c78f",
    "aurelia-testing": "^1.0.0-beta.2.0.0",
    "aurelia-tools": "^0.2.4",
    "browser-sync": "^2.14.0",
    "connect-history-api-fallback": "^1.3.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-changed-in-place": "^2.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^2.0.0-alpha",
    "gulp-notify": "^2.2.0",
    "minimatch": "^3.0.3",
    "through2": "^2.0.1",
    "uglify-js": "^2.7.3",
    "vinyl-fs": "^2.4.3",
    "babel-eslint": "^6.1.2",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-amd": "^6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.14.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-1": "^6.13.0",
    "babel-polyfill": "^6.13.0",
    "babel-register": "^6.14.0",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^3.0.1",
