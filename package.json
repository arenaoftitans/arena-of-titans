{
  "name": "ArenaOfTitans",
  "version": "0.5.0",
  "description": "Fight to death in the arena",
  "scripts": {
    "dev": "node config/build-config.js && webpack-dev-server --config webpack.config.js --hot --inline --progress --devtool eval",
    "build": "webpack --config webpack.config.js --progress --profile",
    "prod": "rm -rf dist && node config/build-config.js --type prod && webpack -p --config webpack.prod.config.js --progress --devtool source-map && cp -au assets dist/",
    "mock": "rm -rf dist && node config/build-config.js --type test && webpack -p --config webpack.prod.config.js --progress --devtool source-map && cp -au assets dist/",
    "test": "karma start",
    "lint": "npm run jslint && npm run stylelint",
    "jslint": "eslint app",
    "stylelint": "stylelint --syntax scss app/**/*.scss",
    "deploy": "npm run prod && rsync -a --delete -P \"dist/\" \"aot:app/\"",
    "devdeploy": "npm run mock && rsync -a --delete -P \"dist/\" \"aot:devapp/\"",
    "translate": "python3 scripts/translate.py",
    "sprites": "glue -s assets/game/cards/movement -o style/sprites --img assets/sprites"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/arenaoftitans/arena-of-titans"
  },
  "main": "gulpfile.js",
  "dependencies": {
    "aurelia-binding": "^1.0.0-rc.1.0.2",
    "aurelia-bootstrapper-webpack": "^1.0.0-rc.1.0.0",
    "aurelia-dependency-injection": "^1.0.0-rc.1.0.0",
    "aurelia-event-aggregator": "^1.0.0-rc.1.0.0",
    "aurelia-framework": "^1.0.0-rc.1.0.1",
    "aurelia-history-browser": "^1.0.0-rc.1.0.0",
    "aurelia-i18n": "git+https://github.com/aurelia/i18n.git#8cc4f9fb3f67a425e1536fb13eb93b4f223a4bff",
    "aurelia-logging-console": "^1.0.0-rc.1.0.0",
    "aurelia-pal-browser": "^1.0.0-rc.1.0.0",
    "aurelia-piwik": "^0.1.2",
    "aurelia-polyfills": "^1.0.0-rc.1.0.0",
    "aurelia-router": "^1.0.0-rc.1.0.0",
    "aurelia-templating": "^1.0.0-rc.1.0.0",
    "aurelia-templating-binding": "^1.0.0-rc.1.0.0",
    "aurelia-templating-resources": "^1.0.0-rc.1.0.0",
    "aurelia-templating-router": "^1.0.0-rc.1.0.0",
    "bluebird": "^3.4.0",
    "clipboard": "^1.5.12",
    "i18next": "3.3.1",
    "i18next-xhr-backend": "^0.6.0",
    "reconnectingwebsocket": "^1.0.0"
  },
  "devDependencies": {
    "aurelia-tools": "^0.2.3",
    "aurelia-webpack-plugin": "^1.0.0-beta.4.0.0",
    "babel-core": "^6.10.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-1": "^6.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.0.1",
    "estraverse-fb": "^1.3.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "jasmine-core": "^2.4.1",
    "json-loader": "^0.5.4",
    "karma": "^1.1.1",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-webpack": "^1.7.0",
    "node-sass": "^3.8.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^4.0.0",
    "style-loader": "https://github.com/webpack/style-loader#4f9f4494184f3b8a427a381249eb0e09f3787768",
    "stylelint": "^6.9.0",
    "stylelint-config-standard": "^9.0.0",
    "toml": "^2.3.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "keywords": [
    "game",
    "board",
    "titans",
    "arena"
  ],
  "author": "Arena of Titans Team",
  "license": "AGPL-3.0"
}
