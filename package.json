    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^2.0.0",
    "gulp-sass": "^2.3.2",
    "css-loader": "^0.23.1",
    "eslint": "^3.0.1",
    "jasmine-core": "^2.4.1",
